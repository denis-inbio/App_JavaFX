<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox fx:id="base" alignment="TOP_CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <HBox alignment="CENTER_LEFT" spacing="5.0">
         <children>
            <Button fx:id="button_minimizeOrMaximize" mnemonicParsing="false" />
            <Label fx:id="label_connectionName" text="Name:" />
            <TextField fx:id="textField_connectionName" editable="false" />
            <Button fx:id="button_editConnectionName" mnemonicParsing="false" />
            <Button fx:id="button_disconnectFromDatabase" mnemonicParsing="false" />
         </children>
         <VBox.margin>
            <Insets top="5.0" />
         </VBox.margin>
      </HBox>
      <VBox fx:id="minimizable" alignment="TOP_CENTER" spacing="5.0">
         <children>
            <HBox alignment="CENTER" spacing="5.0">
               <children>
                  <Label fx:id="label_fileCanonicalPath" text="Canonical path:" />
                  <TextField fx:id="textField_fileCanonicalPath" editable="false" />
               </children>
            </HBox>
            <HBox alignment="CENTER" spacing="5.0">
               <children>
                  <Label fx:id="label_databaseFilesCount" text="Files count in database:" />
                  <TextField fx:id="textField_databaseFilesCount" disable="true" editable="false" />
               </children>
            </HBox>
            <HBox alignment="CENTER">
               <children>
                  <Label fx:id="label_lastQueryStatus" text="&lt;last query's status&gt;" />
               </children>
            </HBox>
         </children>
         <VBox.margin>
            <Insets bottom="5.0" top="5.0" />
         </VBox.margin>
      </VBox>
   </children>
</VBox>
