<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox fx:id="base" maxHeight="-Infinity" minHeight="-Infinity" minWidth="-Infinity" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <HBox>
         <children>
            <Button fx:id="button_minimizeOrMaximize" mnemonicParsing="false" />
         </children>
      </HBox>
      <VBox fx:id="minimizable" alignment="TOP_CENTER" spacing="5.0">
         <VBox.margin>
            <Insets />
         </VBox.margin>
         <children>
            <Label fx:id="label_incomingFiles" text="List of incoming files:" />
            <ListView fx:id="listView_incomingFiles">
               <VBox.margin>
                  <Insets />
               </VBox.margin>
            </ListView>
            <HBox alignment="CENTER" spacing="100.0">
               <children>
                  <Button fx:id="button_accept" mnemonicParsing="false" text="Accept" />
                  <Button fx:id="button_reject" mnemonicParsing="false" text="Reject" />
               </children>
               <VBox.margin>
                  <Insets bottom="5.0" top="5.0" />
               </VBox.margin>
            </HBox>
         </children>
      </VBox>
   </children>
</VBox>
